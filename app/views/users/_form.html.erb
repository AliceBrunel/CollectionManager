<%= form_with model: @user do |f| %>
  <%= label_tag(:username, "Name") %>
  <%= f.text_field :username %>
  <%= label_tag(:name, "Email") %>
  <%= f.text_field :email %>

  <%= check_box_tag(:art_collector) %>
  <%= label_tag(:art_collector, "I'm an art collector") %>
  <%= check_box_tag(:gallery_manager) %>
  <%= label_tag(:gallery_manager, "I am a gallery manager") %>

  <%= label_tag(:name, "Password") %>
  <%= f.text_field :password_digest %>
  <%= f.submit "Create" %>
<% end %>
